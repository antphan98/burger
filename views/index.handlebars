<div class="head-container">
    <img id="burgerimg" src="assets/img/burger.png" alt="Burger image.">
    <h1>Bella's Burger Truck</h1>
    <img id="burgerimg2" src="assets/img/burger.png" alt="Burger image.">

</div>

<div class="form">

<form class="burgerform">
    <input id="burger" type="text" name="burger-name" placeholder="Add a Burger!">
    <button id="submit-btn" type="submit">Submit</button>
</form>
</div>

<div class="burgerlist">
    <section id="createdburgers">
        <ul id="burger-list">
            {{#each burgers}}
            {{#unless devoured}}
            <li class ="newburgers">
                <span class ="burgers">
                    {{this.burger_name}}
                </span>
                <span id="devourbutton">
                    <form class="devour-form" method="POST">
                    <button class= "devourbtn" data-id="{{id}}">Devour!</button>
                    </form>
                </span>
            </li>
            {{/unless}}
            {{/each}}
        </ul>
    </section>
</div>

<div id="burgers-devoured">
			<h5>Devoured Burgers</h5>
			{{#each burgers}}
				{{#if devoured}}
				  <div class="burger">{{burger_name}}</div>
				{{/if}}
			{{/each}}
		</div>
	</section>
</div>